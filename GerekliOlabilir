cmake_minimum_required(VERSION 3.22)

## Use the variable PROJECT_NAME for changing the target name
set( PROJECT_NAME "Personal-Health-Record-Blockchain")
## Set our project name
project(${PROJECT_NAME})
## Use all the *.cpp files we found under this folder for the project
FILE (GLOB SRCS 
"${CMAKE_CURRENT_LIST_DIR}/Base/*.cpp" 
"${CMAKE_CURRENT_LIST_DIR}/Records/*.cpp"
"${CMAKE_CURRENT_LIST_DIR}/Users/*.cpp"
)
## Define the executable
add_executable (${PROJECT_NAME} ${SRCS})


//mesela bu nie tam olarak çalışmadı onu anlamadım . main.cpp yi belirtmesi dışında neyinde hata vardı yani onu anlamadım